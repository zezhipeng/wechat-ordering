            section.content-inner
              .card
                .card-main
                  .card-header
                    .card-inner
                      h1.card-heading Login
                  .card-inner
                    p.text-center
                      span.avatar.avatar-inline.avatar-lg
                        img(alt='alt text for John Smith avatar', src='http://og2h60o77.bkt.clouddn.com/avatar-001.jpg')
                    form.form(action='/superAdminSignIn', method='post')
                      .form-group.form-group-label
                        .row
                          .col-md-10.col-md-push-1
                            label.floating-label(for='ui_login_username') Username
                            input#ui_login_username.form-control(type='text', name='name')
                      .form-group.form-group-label
                        .row
                          .col-md-10.col-md-push-1
                            label.floating-label(for='ui_login_password') Password
                            input#ui_login_password.form-control(type='password', name='password')
                      .form-group
                        .row
                          .col-md-10.col-md-push-1
                            button.btn.btn-block.btn-brand.waves-attach.waves-light.waves-effect(type='submit') Sign In
